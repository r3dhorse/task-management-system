# Fast Development Dockerfile with better caching
FROM node:20-alpine AS base

# Install dependencies only when needed
FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Copy only package files first for better caching
COPY package*.json ./
COPY .npmrc* ./

# Use npm ci with cache mount for faster installs
RUN --mount=type=cache,target=/root/.npm \
    npm ci --legacy-peer-deps --prefer-offline --no-audit

# Development image with hot-reloading
FROM base AS dev
WORKDIR /app

# Install development tools
RUN apk add --no-cache curl git

# Copy node_modules from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy package files
COPY package*.json ./
COPY .npmrc* ./

# Copy the rest of the application code
COPY . .

# Expose port 3000 for Next.js development server
EXPOSE 3000

# Environment variables for development
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV WATCHPACK_POLLING=true
ENV CHOKIDAR_USEPOLLING=true

# Start Next.js in development mode with hot-reloading
CMD ["npm", "run", "dev"]