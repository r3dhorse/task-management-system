# Development Dockerfile for ProjectXS Task Management
FROM node:20-alpine AS development

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache postgresql-client

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies (including dev dependencies)
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Copy development startup script and make it executable
COPY docker-start-dev.sh ./docker-start-dev.sh
RUN chmod +x ./docker-start-dev.sh

# Create necessary directories
RUN mkdir -p ./uploads ./.next

# Set proper permissions for all directories (run as root to avoid volume mount issues)
RUN chmod -R 777 /app

# Expose development port
EXPOSE 3000

# Development startup command with database initialization
CMD ["./docker-start-dev.sh"]