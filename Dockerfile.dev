# Development Dockerfile for ProjectXS Task Management
FROM node:20-alpine AS development

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk update && apk add --no-cache postgresql-client

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies (including dev dependencies)
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Make startup script executable
RUN chmod +x ./docker-start-dev.sh

# Create necessary directories with proper ownership
# Note: Using node user (uid 1000) which is built into node:alpine image
RUN mkdir -p ./uploads ./.next && \
    chown -R node:node ./uploads ./.next

# Expose development port
EXPOSE 3000

# Development startup command
CMD ["sh", "-c", "echo 'Starting development server...' && npx prisma generate && npx prisma db push && npm run db:seed || echo 'Seeding skipped' && npm run dev"]